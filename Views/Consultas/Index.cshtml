@model IEnumerable<ClinicaVeterinaria.Models.Consulta>

@{
    ViewData["Title"] = "Consultas";
}

<div class="card shadow-sm">
    <div class="card-body">
        <h1 class="card-title" style="text-align:center;">Listado de Consultas</h1>

        <form asp-action="Search" method="get" class="form-inline mb-3">
            <div class="form-group mr-3">
                <label for="searchTerm" class="fw-bold">Buscar:</label>
                <input type="text" name="searchTerm" class="form-control form-control-sm ml-1 mr-2" style="width: 200px;" placeholder="Cliente o Código de consulta" value="@ViewBag.CurrentFilter" />
            </div>
            <button type="submit" class="btn btn-primary btn-sm mr-2" style="margin-top: 10px;">Buscar</button>
            <a asp-action="Index" class="btn btn-secondary btn-sm ml-1" style="margin-top: 10px;">Limpiar</a>
        </form>

        <p>
            <a asp-action="Create" class="btn btn-primary">Crear Nueva</a>
        </p>
    </div>
</div>

<div class="card shadow-sm mt-3">
    <div class="card-body">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.CodigoConsulta)</th>
                    <th>@Html.DisplayNameFor(model => model.FechaConsulta)</th>
                    <th>@Html.DisplayNameFor(model => model.DescripcionConsulta)</th>
                    <th>@Html.DisplayNameFor(model => model.FechaCita)</th>
                    <th>@Html.DisplayNameFor(model => model.DescripcionCita)</th>
                    <th>Mascota</th>
                    <th>Veterinario</th>
                    <th>Cliente</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.CodigoConsulta)</td>
                        <td>@Html.DisplayFor(modelItem => item.FechaConsulta)</td>
                        <td>@Html.DisplayFor(modelItem => item.DescripcionConsulta)</td>
                        <td>@Html.DisplayFor(modelItem => item.FechaCita)</td>
                        <td>@Html.DisplayFor(modelItem => item.DescripcionCita)</td>
                        <td>@Html.DisplayFor(modelItem => item.Mascota.Nombre)</td>
                        <td>@Html.DisplayFor(modelItem => item.Veterinario.Nombres)</td>
                        <td>@Html.DisplayFor(modelItem => item.Cliente.Nombres)</td>
                        <td>
                            <div class="btn-group" role="group">
                                <!-- Botón para Editar -->
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info" title="Editar">
                                    <i class="bi bi-pencil-square"></i> Editar
                                </a>
                                <!-- Botón para Detalles -->
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary" title="Detalles">
                                    <i class="bi bi-info-square"></i> Detalles
                                </a>
                                <!-- Botón para Eliminar -->
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" title="Eliminar">
                                    <i class="bi bi-trash"></i> Eliminar
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/bootstrap-icons/font/bootstrap-icons.js"></script>
}
