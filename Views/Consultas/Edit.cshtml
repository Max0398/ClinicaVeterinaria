@model ClinicaVeterinaria.Models.Consulta

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center mb-5">Editar Consulta</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-5-strong" style="background-color: #f8f9fa;">
                <div class="card-body p-5">
                    <h4 class="card-title text-center mb-4">Editar Consulta</h4>
                    <hr />

                    <form asp-action="Edit">
                        <input type="hidden" asp-for="Id" />

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="CodigoConsulta" class="form-label">Código de Consulta</label>
                            <input asp-for="CodigoConsulta" class="form-control" />
                            <span asp-validation-for="CodigoConsulta" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="FechaConsulta" class="form-label">Fecha de Consulta</label>
                            <input asp-for="FechaConsulta" class="form-control" />
                            <span asp-validation-for="FechaConsulta" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DescripcionConsulta" class="form-label">Descripción de Consulta</label>
                            <input asp-for="DescripcionConsulta" class="form-control" />
                            <span asp-validation-for="DescripcionConsulta" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="MascotaId" class="form-label">Mascota</label>
                            <select asp-for="MascotaId" class="form-control" asp-items="ViewBag.MascotaId"></select>
                            <span asp-validation-for="MascotaId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="FechaCita" class="form-label">Fecha de Cita</label>
                            <input asp-for="FechaCita" class="form-control" />
                            <span asp-validation-for="FechaCita" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DescripcionCita" class="form-label">Descripción de Cita</label>
                            <input asp-for="DescripcionCita" class="form-control" />
                            <span asp-validation-for="DescripcionCita" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="VeterinarioId" class="form-label">Veterinario</label>
                            <select asp-for="VeterinarioId" class="form-control" asp-items="ViewBag.VeterinarioId"></select>
                            <span asp-validation-for="VeterinarioId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ClienteId" class="form-label">Cliente</label>
                            <select asp-for="ClienteId" class="form-control" asp-items="ViewBag.ClienteId"></select>
                            <span asp-validation-for="ClienteId" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-block">Guardar Consulta</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-secondary">Volver al Listado</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
