@model ClinicaVeterinaria.Models.MascotaColores

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center mb-5">Editar Relación Mascota-Colores</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-5-strong" style="background-color: #f8f9fa;">
                <div class="card-body p-5">
                    <h4 class="card-title text-center mb-4">Datos de la Relación</h4>
                    <hr />

                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label asp-for="MascotaId" class="form-label">Mascota</label>
                            <select asp-for="MascotaId" class="form-control" asp-items="ViewBag.MascotaId"></select>
                            <span asp-validation-for="MascotaId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ColoresId" class="form-label">Colores</label>
                            <select asp-for="ColoresId" class="form-control" asp-items="ViewBag.ColoresId"></select>
                            <span asp-validation-for="ColoresId" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-block">Guardar Cambios</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-secondary">Volver al Listado</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
