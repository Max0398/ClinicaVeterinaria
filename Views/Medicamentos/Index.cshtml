@model IEnumerable<ClinicaVeterinaria.Models.Medicamento>

@{
    ViewData["Title"] = "Listado de Medicamentos";
}

<!-- Card para el formulario de búsqueda -->
<div class="card shadow-sm">
    <div class="card-body">
        <h1 class="card-title text-center">Listado de Medicamentos</h1>

        <form asp-action="Search" asp-controller="Medicamentos" method="get" class="form-inline mb-3" style="padding-top: 15px;">
            <div class="form-group mr-3" style="margin-top: 10px;">
                <label for="searchTerm" class="fw-bold">Buscar:</label>
                <input type="text" name="searchTerm" class="form-control form-control-sm ml-2" style="width: 200px;" placeholder="Código Medicamento o Descripción" value="@ViewData["CurrentFilter"]" />
            </div>
            <button type="submit" class="btn btn-primary btn-sm mr-3" style="margin-top: 10px;">Buscar</button>
            <a asp-action="Index" class="btn btn-secondary btn-sm" style="margin-top: 10px;">Limpiar</a>
        </form>

        <p>
            <a asp-action="Create" class="btn btn-primary">Crear Nuevo</a>
        </p>
    </div>
</div>

<!-- Card para la tabla de medicamentos -->
<div class="card shadow-sm mt-3">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-dark">
                    <tr>
                        <th scope="col" style="max-width: 150px; white-space: normal;">@Html.DisplayNameFor(model => model.CodigoMedicamento)</th>
                        <th scope="col" style="max-width: 200px; white-space: normal;">@Html.DisplayNameFor(model => model.Descripcion)</th>
                        <th scope="col" style="max-width: 150px; white-space: normal;">@Html.DisplayNameFor(model => model.TipoMedicamento.CodigoTipo)</th>
                        <th scope="col" style="max-width: 150px; white-space: normal;">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="table-primary">
                            <th scope="row" style="white-space: nowrap;">@Html.DisplayFor(modelItem => item.CodigoMedicamento)</th>
                            <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                            <td>@Html.DisplayFor(modelItem => item.TipoMedicamento.CodigoTipo)</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm mr-1" title="Editar">
                                        <i class="bi bi-pencil-square"></i> Editar
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary btn-sm mr-1" title="Detalles">
                                        <i class="bi bi-info-square"></i> Detalles
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" title="Eliminar">
                                        <i class="bi bi-trash"></i> Eliminar
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/bootstrap-icons/font/bootstrap-icons.js"></script>
}
