@model ClinicaVeterinaria.Models.DetalleConsulta

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center mb-5">Crear Detalle de Consulta</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-5-strong" style="background-color: #f8f9fa;">
                <div class="card-body p-5">
                    <h4 class="card-title text-center mb-4">Datos del Detalle de Consulta</h4>
                    <hr />

                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="ConsultaId" class="form-label">Código de Consulta</label>
                            <select asp-for="ConsultaId" class="form-control" asp-items="ViewBag.ConsultaId"></select>
                            <span asp-validation-for="ConsultaId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Aplicacion" class="form-label">Aplicación</label>
                            <input asp-for="Aplicacion" class="form-control" />
                            <span asp-validation-for="Aplicacion" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="MedicamentoId" class="form-label">Medicamento</label>
                            <select asp-for="MedicamentoId" class="form-control" asp-items="ViewBag.MedicamentoId"></select>
                            <span asp-validation-for="MedicamentoId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Cantidad" class="form-label">Cantidad</label>
                            <input asp-for="Cantidad" class="form-control" />
                            <span asp-validation-for="Cantidad" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-block">Crear Detalle de Consulta</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-secondary">Volver al Listado</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
