@model ClinicaVeterinaria.Models.RazaMascotas

@{
    ViewData["Title"] = "Crear Raza";
}

<h1 class="text-center mb-5">Crear Raza</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-5-strong" style="background-color: #f8f9fa;">
                <div class="card-body p-5">
                    <h4 class="card-title text-center mb-4">Datos de la Raza de la Mascota</h4>
                    <hr />

                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="MascotaId" class="form-label">Mascota ID</label>
                            @Html.DropDownListFor(m => m.MascotaId, (IEnumerable<SelectListItem>)ViewBag.MascotaId, "-- Seleccione una mascota --", new { @class = "form-control" })
                            <span asp-validation-for="MascotaId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="RazaId" class="form-label">Raza ID</label>
                            @Html.DropDownListFor(m => m.RazaId, (IEnumerable<SelectListItem>)ViewBag.RazaId, "-- Seleccione una raza --", new { @class = "form-control" })
                            <span asp-validation-for="RazaId" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-block">Crear Raza</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-secondary">Volver al Listado</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
