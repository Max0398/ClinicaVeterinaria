@model ClinicaVeterinaria.Models.Colores

@{
    ViewData["Title"] = "Detalles del Color";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card shadow-5-strong" style="background-color: #f8f9fa;">
                <div class="card-header text-center">
                    Detalle del Color
                </div>
                <div class="card-body p-4">
                    <dl class="row">
                        <dt class="col-sm-4">Código:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.CodigoColor)</dd>

                        <dt class="col-sm-4">Descripción:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Descripcion)</dd>
                    </dl>
                </div>
                <div class="card-footer text-center">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-sm">Editar</a>
                    <a asp-action="Index" class="btn btn-secondary btn-sm">Volver</a>
                </div>
            </div>
        </div>
    </div>
</div>
