@model ClinicaVeterinaria.Models.Cliente

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center mb-5">Registro Nuevo Cliente</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-5-strong" style="background-color: #f8f9fa;">
                <div class="card-body p-5">
                    <h4 class="card-title text-center mb-4">Datos del Cliente </h4>
                    <hr />

                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Nombres" class="form-label">Nombres</label>
                            <input asp-for="Nombres" class="form-control" />
                            <span asp-validation-for="Nombres" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Apellidos1" class="form-label">Primer Apellido</label>
                            <input asp-for="Apellidos1" class="form-control" />
                            <span asp-validation-for="Apellidos1" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Apellidos2" class="form-label">Segundo Apellido</label>
                            <input asp-for="Apellidos2" class="form-control" />
                            <span asp-validation-for="Apellidos2" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Direccion" class="form-label">Dirección</label>
                            <input asp-for="Direccion" class="form-control" />
                            <span asp-validation-for="Direccion" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Telefono" class="form-label">Teléfono</label>
                            <input asp-for="Telefono" class="form-control" />
                            <span asp-validation-for="Telefono" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Correo" class="form-label">Correo Electrónico</label>
                            <input asp-for="Correo" class="form-control" />
                            <span asp-validation-for="Correo" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="N_Identificacion" class="form-label">Número de Identificación</label>
                            <input asp-for="N_Identificacion" class="form-control" />
                            <span asp-validation-for="N_Identificacion" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CodigoCliente" class="form-label">Código de Cliente</label>
                            <input asp-for="CodigoCliente" class="form-control" />
                            <span asp-validation-for="CodigoCliente" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-block">Crear Cliente</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-secondary">Volver al Listado</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
