@model IEnumerable<ClinicaVeterinaria.Models.Cliente>

@{
    ViewData["Title"] = "Clientes";
}

<h1>Listado Clientes</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear Nuevo</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th style="white-space: nowrap;">@Html.DisplayNameFor(model => model.Nombres)</th>
            <th>@Html.DisplayNameFor(model => model.Apellidos1)</th>
            <th>@Html.DisplayNameFor(model => model.Apellidos2)</th>
            <th>@Html.DisplayNameFor(model => model.Direccion)</th>
            <th>@Html.DisplayNameFor(model => model.Telefono)</th>
            <th>@Html.DisplayNameFor(model => model.Correo)</th>
            <th>@Html.DisplayNameFor(model => model.N_Identificacion)</th>
            <th>@Html.DisplayNameFor(model => model.CodigoCliente)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="custom-table-row">
                <td style="white-space: nowrap;">@Html.DisplayFor(modelItem => item.Nombres)</td>
                <td>@Html.DisplayFor(modelItem => item.Apellidos1)</td>
                <td>@Html.DisplayFor(modelItem => item.Apellidos2)</td>
                <td>@Html.DisplayFor(modelItem => item.Direccion)</td>
                <td>@Html.DisplayFor(modelItem => item.Telefono)</td>
                <td>@Html.DisplayFor(modelItem => item.Correo)</td>
                <td>@Html.DisplayFor(modelItem => item.N_Identificacion)</td>
                <td>@Html.DisplayFor(modelItem => item.CodigoCliente)</td>
                <td>
                    <div class="btn-group" role="group">
                        <!-- Botón para Editar -->
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info" title="Editar">
                            <i class="bi bi-pencil-square"></i> Editar
                        </a>
                        <!-- Botón para Detalles (Details) -->
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary" title="Detalles">
                            <i class="bi bi-info-square"></i> Detalles
                        </a>
                        <!-- Botón para Eliminar -->
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" title="Eliminar">
                            <i class="bi bi-trash"></i> Eliminar
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/bootstrap-icons/font/bootstrap-icons.js"></script>
}
